---
import { barbers } from '../../data/db'
import MemberItem from './MemberItem.astro'
---

<section id="members" class="bg-gray-900">
  <div class="member-container-child">
    <h2 class="member-title">Miembros</h2>
    <p class="member-paragraph">
      Elige al barbero de tu preferencia, aunque es dificil escoger entre tanta
      calidad.
    </p>

    <div class="member-card-container">
      {
        barbers.map(( barber ) => (
          <MemberItem { ...barber } /> 
        ))
      }
    </div>
  </div>
</section>

<style>
  .member-container-child {
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 1em 0;
  }

  .member-title {
    color: white;
    font-size: 3rem;
    font-family: "Lobster", sans-serif;
    font-weight: 400;
    font-style: normal;
    text-align: center;
  }

  .member-paragraph {
    color: rgb(13, 211, 246);
    font-size: 1.2rem;
    text-align: center;
    font-weight: 600;
  }

  .member-card-container {
    display: flex;
    overflow-x: scroll;
    gap: 1.5em;
    width: fit-content;
    max-width: 350px;
    height: 450px;
    margin: 2em auto 0;
    padding: 0.5em 1em;
  }

  @media (min-width: 768px) {
    .member-container-child {
      padding: 2em 0 1em;
    }

    .member-paragraph {
      font-size: 1.5rem;
    }

    .member-card-container {
      gap: 2em;
      max-width: 400px;
      height: 500px;
      margin: 2em auto;
      padding: 0em;
    }
  }

  @media (min-width: 1000px) {
    .member-title {
      font-size: 4rem;
    }

    .member-paragraph {
      font-size: 1.6rem;
    }

    .member-card-container {
      display: flex;
      overflow-x: visible;
      gap: 0em;
      width: 90%;
      max-width: 1200px;
      height: 500px;
      margin: 4em auto 0;
      gap: 2em;
    }

    
  }
</style>