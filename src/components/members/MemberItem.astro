---

const { image, name } = Astro.props;


---


<div class="member-card-container-child">
    <figure class="member-card-img">
      <img
        class="member-card-image"
        src={ image }
        alt={`Imagen de presentaciÃ³n de ${ name }`}
      />
      <h3 class="member-card-name">{ name }</h3>
    </figure>
</div>

<style>
    .member-card-container-child {
    display: flex;
    flex-direction: column;
    width: fit-content;
    height: 100%;
    position: relative;
  }

  .member-card-img {
    width: 300px;
    height: 350px;
  }

  .member-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top;
    mask-image: linear-gradient(black 70%, transparent);
  }

  .member-card-name {
    font-family: "Bangers", system-ui;
    font-weight: 400;
    font-style: normal;
    color: rgb(170, 24, 24);
    font-size: 4rem;
    text-align: center;
    position: absolute;
    bottom: 0.5em;
    right: 0;
    left: 0;
  }


  @media( min-width: 768px ) {
    .member-card-img {
      width: 400px;
      height: 450px;
    }

    .member-card-name {
      bottom: 0.2em;
    }
  }

  @media( min-width: 1000px ) {
    .member-card-img {
      width: 400px;
      height: 450px;
    }

    .member-card-name {
      bottom: 0.2em;
    }

    .member-card-container-child {
      display: flex;
      flex-direction: column;
      flex: 1;
      position: relative;
      transition: all ease-in-out .3s;
    }

    .member-card-img {
      width: 100%;
      height: 400px;
    }

    .member-card-image {
      mask-image: linear-gradient(
        transparent,
        black 70%, 
        transparent);
    }

    .member-card-container-child:hover{
        scale: 1.2;
        .member-card-image {
            mask-image: linear-gradient(
                black 70%,
                transparent
            );
        }
    }

    .member-card-name {
      font-size: 4rem;
      bottom: 0.4em;
    }
  }
</style>