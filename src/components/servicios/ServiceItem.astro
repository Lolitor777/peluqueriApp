---
const { name, image } = Astro.props;
---


<figure class="item-image">
    <img src={ image } alt="Imagen del item" class="item-img">
</figure>

<div class="item-content">
    <h3 class="item-title">{ name }</h3>
        <a href="#" class="item-link">
            Entra
        </a>
</div>






<style>
    
    .item-image {
        width: auto;
        height: auto;
        position: absolute;
        inset: 0;
        background: linear-gradient(
            rgba(0, 0, 0, 0.7), 
            rgba(0, 0, 0, 0.7)
        );
    }

    .item-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        position: relative;
        z-index: -1;
    }

    .item-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: absolute;
        inset: 0;
        z-index: 1;
    }

    .item-title {
        color: white;
        text-align: center;
        font-size: 1.5rem;
    }

    .item-link {
        color: rgb(219, 117, 22);
        font-size: 1.2rem;
        text-decoration: underline;
        font-weight: 600;
    }

    .item-link:hover {
        color: white;
    }

    @media( min-width: 768px ) {
        .item-title {
        color: white;
        text-align: center;
        font-size: 2rem;
    }

    .item-link {
        color: rgb(255, 21, 0);
        font-size: 1.5rem;
        text-decoration: underline;
        font-weight: 600;
    }
    }



</style>