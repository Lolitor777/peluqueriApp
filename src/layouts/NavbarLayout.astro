<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  header {
	background: #0F2027;  
	background: -webkit-linear-gradient(to right, #2C5364, #203A43, #0F2027);  
	background: linear-gradient(to right, #2C5364, #203A43, #0F2027); 
	position: relative;
	z-index: 100;
  }

  .menu-mobile-active {
	background-image: url(../../assets/background-menu-mobile.png);
	background-position: center;
	background-size: cover;
	background-repeat: no-repeat;
    padding: 1em 2em;
    transform: translateX(0px);
    transition: transform ease-in-out 0.1s;
    text-align: center;
	box-shadow: 0px 10px 15px black;
  }

  .menu-mobile-active > ul > a > li {
    font-size: 1.2rem;
    font-weight: 500;
    margin-top: 1em;
  }

  .menu-mobile-active > ul > a > li:hover {
    color: rgb(26, 187, 211);
  }

  .menu-mobile-hidden {
    transform: translateX(-1200px);
    transition: transform ease-in-out 0.3s;
  }
</style>

<script>
  const btn = document.getElementById("btn-menu");
  const menu = document.getElementById("menu-container");
  const item = document.querySelectorAll(".menu-item");

  btn.addEventListener("click", () => {
    menu.classList.toggle("menu-mobile-hidden");
  });

  item.forEach((element) => {
    element.addEventListener("click", () => {
      menu.classList.toggle("menu-mobile-hidden");
    });
  });
</script>
